#signModal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
   .modal-dialog(role='document')
     .modal-content
       .modal-header
         h5.modal-title Registro
         button.close(type='button', data-dismiss='modal', aria-label='Close')
           span(aria-hidden='true') Ã—
       .modal-body
         form(action='/users/sign', method='POST')
           p
             | N. Identificacion*:
             br
             input(type='text', name='id', placeholder='NIT', required='')
           p
             | Nombre*:
             br
             input(type='text', name='nombres', placeholder='Nombre', required='')
           p
             | Apellido*:
             br
             input(type='text', name='apellidos', placeholder='Apellido', required='')
           p
             | Email*:
             br
             input(type='email', name='email', placeholder='mail@mail.com')
           p
             | Telefono:
             br
             input(type='text', name='telefono', placeholder='00000')
           p
             | Institucion de Origen:
             br
             input(type='text', name='institucion_origen', placeholder='Institucion', required='')
           p
             | Programa de Origen:
             br
             input(type='text', name='programa_origen', placeholder='Programa')
           button.btn.btn-dark(type='submit') Registrarse
       .modal-footer
         button.btn.btn-secondary(type='button', data-dismiss='modal') Cerrar
